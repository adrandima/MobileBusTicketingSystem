<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="39dp"
        android:layout_height="31dp"
        android:layout_marginStart="316dp"
        android:layout_marginLeft="316dp"
        app:layout_constraintBottom_toBottomOf="@+id/NIC"
        app:layout_constraintStart_toStartOf="@+id/NIC"
        app:layout_constraintTop_toTopOf="@+id/NIC"
        app:layout_constraintVertical_bias="0.434"
        app:srcCompat="@drawable/nic" />

    <Button
        android:id="@+id/registrationConfirm"
        android:layout_width="@dimen/textInputWidth"
        android:layout_height="@dimen/textInputHeight"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="@dimen/Input_field_layout_margin_Left_Right"
        android:layout_marginTop="@dimen/input_field_layout_marginTop"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="@dimen/Input_field_layout_margin_Left_Right"
        android:text="Confirm"
        android:textColor="#ffffff"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmPassword" />

    <EditText
        android:id="@+id/lastName"
        android:layout_width="@dimen/textInputWidth"
        android:layout_height="@dimen/textInputHeight"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="@dimen/Input_field_layout_margin_Left_Right"
        android:layout_marginTop="@dimen/input_field_layout_marginTop"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="@dimen/Input_field_layout_margin_Left_Right"
        android:drawableRight="@drawable/person_icon_2"
        android:drawablePadding="@dimen/drawble_icon_padding"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstName" />

    <EditText
        android:id="@+id/NIC"
        android:layout_width="@dimen/textInputWidth"
        android:layout_height="@dimen/textInputHeight"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="@dimen/Input_field_layout_margin_Left_Right"
        android:layout_marginTop="@dimen/input_field_layout_marginTop"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="@dimen/Input_field_layout_margin_Left_Right"
        android:ems="10"
        android:hint="NIC"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastName" />

    <EditText
        android:id="@+id/contactNumber"
        android:layout_width="@dimen/textInputWidth"
        android:layout_height="@dimen/textInputHeight"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="@dimen/Input_field_layout_margin_Left_Right"
        android:layout_marginTop="@dimen/input_field_layout_marginTop"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="@dimen/Input_field_layout_margin_Left_Right"
        android:drawableRight="@drawable/phone_icon"
        android:drawablePadding="@dimen/drawble_icon_padding"
        android:ems="10"
        android:hint="Mobile Number"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NIC" />

    <EditText
        android:id="@+id/email"
        android:layout_width="@dimen/textInputWidth"
        android:layout_height="@dimen/textInputHeight"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="@dimen/Input_field_layout_margin_Left_Right"
        android:layout_marginTop="@dimen/input_field_layout_marginTop"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="@dimen/Input_field_layout_margin_Left_Right"
        android:drawableRight="@drawable/email_icon"
        android:drawablePadding="@dimen/drawble_icon_padding"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactNumber" />

    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/textInputWidth"
        android:layout_height="@dimen/textInputHeight"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="@dimen/Input_field_layout_margin_Left_Right"
        android:layout_marginTop="@dimen/input_field_layout_marginTop"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="@dimen/Input_field_layout_margin_Left_Right"
        android:drawableRight="@drawable/password_icon"
        android:drawablePadding="@dimen/drawble_icon_padding"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="@dimen/textInputWidth"
        android:layout_height="@dimen/textInputHeight"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="@dimen/Input_field_layout_margin_Left_Right"
        android:layout_marginTop="@dimen/input_field_layout_marginTop"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="@dimen/Input_field_layout_margin_Left_Right"
        android:drawableRight="@drawable/password_icon"
        android:drawablePadding="@dimen/drawble_icon_padding"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <EditText
        android:id="@+id/firstName"
        android:layout_width="@dimen/textInputWidth"
        android:layout_height="@dimen/textInputHeight"
        android:layout_marginTop="32dp"
        android:drawableRight="@drawable/person_icon"
        android:drawablePadding="@dimen/drawble_icon_padding"
        android:ems="10"
        android:hint="First Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="106dp"
        android:layout_height="70dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:srcCompat="@drawable/regi" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="16dp"
        android:background="#00816363"
        android:text="Registration"
        android:textColor="#3759B9"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="382dp"
        android:layout_height="623dp"
        android:layout_marginTop="72dp"

        android:background="#14131355"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>