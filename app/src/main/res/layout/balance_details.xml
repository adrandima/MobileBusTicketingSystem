<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Balance">


    <Button
        android:id="@+id/addCredit"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="@string/addCredit"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/balanceView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="123dp"
        android:layout_height="40dp"
        android:layout_marginTop="44dp"
        android:text="@string/accountBalance"
        app:layout_constraintEnd_toEndOf="@+id/balanceView"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toBottomOf="@+id/balanceView" />

    <TextView
        android:id="@+id/balanceView"
        android:layout_width="308dp"
        android:layout_height="105dp"
        android:layout_marginTop="24dp"
        android:text="@string/balance"
        android:textSize="50dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/view5"
        app:layout_constraintHorizontal_bias="0.53"
        app:layout_constraintStart_toStartOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/view5" />

    <View
        android:id="@+id/view5"
        android:layout_width="374dp"
        android:layout_height="252dp"
        android:layout_marginTop="24dp"

        android:background="#14131355"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>